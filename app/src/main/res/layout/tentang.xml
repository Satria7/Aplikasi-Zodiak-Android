<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundTab">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_satu_Tentang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/Theme.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_satu_Tentang"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutatasTentang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_satu_Tentang"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewzo"
                android:layout_width="100dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/versiapps"
                android:textColor="@android:color/background_light"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Copyright @ 2017 Gusti Ngurah Mertayasa"
                android:textColor="@android:color/background_light"
                android:textSize="12dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/layoutatasTentang"
            android:background="@color/backgroundTab">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/backgroundTab">

                    <TextView
                        android:id="@+id/txt01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:enabled="false"
                        android:text="Tentang Aplikasi"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/imageView3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_below="@id/txt01"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        card_view:cardElevation="6dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_launcher" />
                    </android.support.v7.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/Relative1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt01"
                        android:layout_toRightOf="@id/imageView3">

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:enabled="false"
                            android:text="Nama Aplikasi : "
                            android:textColor="@color/text_standar"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@id/txt1"
                            android:enabled="false"
                            android:text="@string/app_name"
                            android:textColor="@color/text_standar"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/Relative2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Relative1"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/imageView3">

                        <TextView
                            android:id="@+id/txt11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:enabled="false"
                            android:text="Versi Aplikasi   : "
                            android:textColor="@color/text_standar"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/txt11"
                            android:enabled="false"
                            android:text="@string/versiapps"
                            android:textColor="@color/text_standar"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/Relative3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Relative2"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/imageView3">

                        <TextView
                            android:id="@+id/txt12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:enabled="false"
                            android:text="Update               : "
                            android:textColor="@color/text_standar"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/txt12"
                            android:enabled="false"
                            android:text="Desember 2017"
                            android:textColor="@color/text_standar"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imggaris"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/imageView3"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/text_standar" />

                    <TextView
                        android:id="@+id/txt1a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imggaris"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:enabled="false"
                        android:text="Apa itu ZodiakKu?"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt1a"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:enabled="false"
                        android:text="\nZodiakKu merupakan sebuah aplikasi yang didalamnya memuat tentang ramalan zodiak kamu. Kamu dapat melihat semua info tentang zodiak kamu disini, mulai dari Asmara, Keuangan dan masih banyak lagi."
                        android:textColor="@color/text_standar"
                        android:textSize="14dp" />


                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>